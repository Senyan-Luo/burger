<div class="container">

  <div class="jumbotron jumbotron-fluid">
    <div class="container">
      <h1 class="display-4r">Burgers!</h1>
    </div>
  </div>


  <div class="row">
    <div class="col-lg-6">
    <h2>Burgers ready</h2>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
        <p>{{this.id}}. {{this.burger_name}}
        <button class="devour-button" data-id="{{this.id}}">Devour It!</button>
        </p>
        {{/unless}}
      {{/each}}
    </ul>
    </div>

    <div class="col-sm-3">
    <h2>Burgers devoured!</h2>

    <ul>
      {{#each burgers}}
        {{#if devoured}}
          <p>{{this.id}}. {{this.burger_name}}</p>
        {{/if}}
      {{/each}}
    </ul>
    </div>

    <div class="col-lg-12 addbox">
      <div class="row justify-content-center">
      <h2>Add new Burger</h2>
      </div>
      <div>
        <form class="create-form">
          <div class="form-group">
            <label for="nameDiv">Burger Name:</label>
            <input type="text" id="nameDiv" name="name">
          </div>
          <button type="submit">Add burger</button>
        </form>
      </div>
    </div>
  </div>
</div>